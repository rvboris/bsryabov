<section class="experience">
  <h3>{{data.experience.title}}</h3>

  {% for item in data.experience.items %}
  <div class="experience__item">
    <div class="experience__position">{{item.position}} - {{item.place}}</div>
    <div class="experience__period">{{item.period | capitalize}}</div>
    <div class="experience__description">
      {% include 'partials/experience/' + item.description + '.njk' %}
    </div>
  </div>
  {% endfor %}
</section>
